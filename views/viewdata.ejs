<!DOCTYPE html>
<html lang="en">
    <%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
        <section class="outerring">
            <div class="inner90 table">
                    <form action="/savedata" method="POST" enctype="multipart/form-data">
                        <div class="inner20">
                                <div class="rolling image_box">
                                    <img id="pic"  src="../public/dummy_img.png" >
                                </div>
                                <div>
                                    <input type="file" class="addphoto" name="photo" accept="image/*" multiple onchange="loadFile(event)">
                                </div>
                        </div>
                        <div class="inner20">
                            <div class="onlytext_hori_div textmargin">
                                <h4>Name :</h4>
                            </div>
                            <div class="onlyinput_horidiv input_margin">
                                <input type="text" class="input" name="user" id="name" required>
                            </div>
                        </div>
                        <div class="inner20">
                            <div class="onlytext_hori_div textmargin">
                                <h4>Email :</h4>
                            </div>
                            <div class="onlyinput_horidiv input_margin">
                                <input type="email" class="input" name="gmail" id="gmail" required>
                            </div>
                        </div>
                        <div class="inner20">
                            <div class="onlytext_hori_div textmargin">
                                <h4>Address :</h4>
                            </div>
                            <div class="onlyinput_horidiv input_margin">
                                <input type="text" class="input" id="Address" name="Address" required>
                            </div>
                        </div>
                        <div class="inner20" style="padding-top: 50px;">
                            <div class="onlytext_hori_div textmargin">
                                <h4>Phone:</h4>
                            </div>
                            <div class="onlyinput_horidiv input_margin">
                                <input type="text" class="input"id="phone" name="phone" required>
                            </div>
                        </div>
                        <div class="inner20" style="padding-top: 50px;">
                            <div class="onlytext_hori_div textmargin">
                                <h4>Mobile:</h4>
                            </div>
                            <div class="onlyinput_horidiv input_margin">
                                <input type="text" class="input" id="phone" name="mobile" required>
                            </div>
                        </div>
                        <div class="inner20" style="padding-top: 50px;">
                            <div class="onlytext_hori_div textmargin">
                                <h4>DOB:</h4>
                            </div>
                            <div class="onlyinput_horidiv input_margin">
                                <input type="date" class="input" id="phone" name="Dob" required>
                            </div>
                        </div>
                        <div class="inner20" style="padding-top: 30px;">
                            <div class="button " style="padding: 8px 10px; text-align: justify;">
                                <button type="submit"style=" padding:  8px 10px;;">submit</button>
                            </div>
                        </div>
                    </form>
            </div>
        </section>
        <script type="text/javascript">
            var loadFile = function(event) {
        var output = document.getElementById('pic');
        output.src = URL.createObjectURL(event.target.files[0]);
      };
        </script>
</body>
</html>