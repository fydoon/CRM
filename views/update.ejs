<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Fydoon CRM Admin Panel</title>
        <!-- CSS only -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
        <link rel="stylesheet" href="/public/styles.css">
        <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>
        $(document).ready(function(){
            $(".hamburger .hamburger__inner").click(function(){
                $(".wrapper").toggleClass("active")
            })
            $(".top_navbar .fas").click(function(){
                $(".profile_dd").toggleClass("active");
            });
        });
        </script>
        <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
        <!-- JavaScript Bundle with Popper -->
    </head>
    
    <body>
        <section>
        <div class="wrapper">
            <div class="top_navbar">
              <div class="hamburger">
                <div class="hamburger__inner">
                  <div class="one"></div>
                  <div class="two"></div>
                  <div class="three"></div>
                </div>
              </div>
              <div class="menu">
                <div class="logo">
                  Fydoon Admin Panel
                </div>
                <div class="right_menu">
                  <ul>
                    <li><i class="fas fa-user" style="color: aliceblue;"></i>
                      <div class="profile_dd">
                        <!-- <div class="dd_item">Profile</div>
                        <div class="dd_item">Change Password</div> -->
                        <div class="dd_item" ><a  href="/logout"><i class="fas fa-sign-out-alt"></i>&emsp;Logout</a></div>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <div class="main_container">
                <div class="sidebar">
                    <div class="sidebar__inner">
                      <div class="profile">
                        <div class="img">
                          <a href="success"><img src="/public/profile.jpg" alt="profile_pic" ></a>
                        </div>
                        <div class="profile_info">
                          <p>Welcome</p>
                        </div>
                      </div>
                      <ul>
                        <li>
                          <a href="Dashboard" class="">
                            <span class="icon"><i class="fas fa-dice-d6"></i></span>
                            <span class="title">Dashboard</span>
                          </a>
                        </li>
                        
                        <li>
                          <a href="viewdata">
                            <span class="icon"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
                            <span class="title">Client Info</span>
                          </a>
                        </li>
                        <li>
                          <a href="clientdata">
                            <span class="icon"><i class="fa fa-server" aria-hidden="true"></i></span>
                            <span class="title">Clients Database</span>
                          </a>
                        </li>
                        <li>
                          <a href="SalesInfo">
                            <span class="icon"><i class="fas fa-chart-line"></i></span>
                            <span class="title">Sales Info</span>
                          </a>
                        </li>
                        <li>
                          <a href="BasicAnalytics">
                            <span class="icon"><i class="fas fa-chart-pie"></i></span>
                            <span class="title">Basic Analytics</span>
                          </a>
                        </li>
                        <li>
                          <a href="Emailtrigger">
                            <span class="icon"><i class="fas fa-envelope-open-text"></i></span>
                            <span class="title">Email trigger</span>
                          </a>
                        </li>
                      </ul>
                    </div>
                </div>
            </div>
          </div>
        </section>
        <section class="inner90">
            <div style="margin-bottom: 8%;">
                <div class="createnew">
                    <a href="viewdata">
                        <Button class="btnc" type="submit"> Create New Contact</Button>
                    </a>
                    <input class="holder" type="text" placeholder=" &Tab;&Tab;&Tab;&Tab;&Tab;ï€‚"/>
              </div>
            </div>
            <div class="inner30">
                <div class="form-container">
                    <form action="/updateclient" method="POST">
                    <div class="table">
                        <div class="feilds">
                            <input type="hidden" class="input" name="id" id="if" value="<%= client._id %>">
                        </div>
                        <div class="feilds">
                            <input type="text" class="input" name="user" id="name" value="<%= client.user %>">
                        </div>
                        <div class="feilds">                                 
                            <input type="email" class="input" name="gmail" id="gmail" value="<%= client.gmail %>">
                        </div>
                        <div class="feilds">                             
                            <input type="text" class="input" value="<%= client.Address %>" id="Address" name="Address">
                        </div>
                        <div class="feilds">
                            <input type="text" class="input" value="<%= client.phone %>" id="phone" name="phone" >
                        </div>
                        <div class="feilds">
                            <input type="text" class="input" value="<%= client.mobile %>" id="phone" name="mobile" >
                        </div>
                        <div class="feilds">
                            <input type="text" class="input" value="<%= client.Dob %>" id="phone" name="Dob" >
                        </div>
                    </div>
                    <div class="button" style="padding: 8px 10px; text-align: justify;">
                        <button type="submit"style=" padding:  8px 10px;;">update</button>
                    </div>
                </form>
                </div>
            </div>


        </section >

     </div>
</body>
</html>